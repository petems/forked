  <body>
    <div class='container' style="width: 600px;" >
      <header class='row' style="padding: 50px 0;">
        <i class='fa fa-code-fork fa-5x'></i>
        <form>
          <div class="input-group input-group-lg">
            <span class="input-group-addon"><span class="glyphicon glyphicon-book"></span></span>
            <input type="text" name='repo' class="form-control" placeholder="username/repo">
          </div>
        </form>
      </header>
      <div class='row'>
        <%= yield %>
      </div>
      <footer class="footer">
        <img src='/images/BE.png' alt='thanks to @bdc'/> Made by <a href='http://yannick.io'>Yannick</a> with love in Belgium
      </footer>
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/moment.min.js"></script>

    <script>
      $(function(){
        $('time').each(function(i, e) {
          var time = moment($(e).attr('datetime'));
          $(e).html(time.fromNow());
          });
        $('form').submit(function(){
          $(location).attr('pathname', $('[name="repo"]').val());
          return false;
          });
        });
    </script>
